
html, body {
  padding: 0;
  margin: 0;
}

body {
  font-family: 'Roboto',  'Helvetica Neue', sans-serif;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
  font-size: 16px;
  color: $textColor;
  overflow-x:hidden;
}

.page {
  h1 {
    margin-bottom: 2rem;
    border-bottom: 1px solid lightgray;
  }

  h2 {
    margin-top: 3rem;
    margin-bottom: 2rem;
  }

  p {
    line-height: 2;
  }
}

h1, h2, h3, h4, h5, h6 {
  .header-anchor {
    opacity: 0 !important;
    position: absolute;
    left: 0.5rem;
    width: 100%;
  }

  &:hover {
    .header-anchor {
      opacity: 1 !important;
    }
  }
}

a {
  text-decoration: none;
}

.v-application code {
  background: #272822;
  box-shadow: none;
  color: black;
}

.v-application--is-ltr .v-treeview-node--leaf {
  margin-left: 0;
}
.nav-links {
  color:black;
}
.menu-mode {
  background-color: white;
}
.colorDark {
  color:#444444 ;
}
.colorGreyed {
  color:#707070;
}
.colorDark2 {
  color:#373A36;
}

